<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6699FF"
    tools:context=".Mascotas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            app:srcCompat="@drawable/mascotas" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#0033FF"
            android:text="DOG FOOD"
            android:textStyle="bold"
            app:backgroundTint="#0033FF" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#00CCFF"
            android:text="CAT FOOD"
            android:textStyle="bold"
            app:backgroundTint="#00CCFF" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#3333CC"
            android:text="PETS FASHION"
            android:textStyle="bold"
            app:backgroundTint="#3333CC" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>