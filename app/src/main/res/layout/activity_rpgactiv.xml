<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81DA81"
    tools:context=".rpgactiv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView84"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/exera" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Scramble Words: Guest the word knowing the letters that compose it." />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hint: Additional ability" />

        <ImageView
            android:id="@+id/imageView85"
            android:layout_width="317dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/exerrpg" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            android:text="Enter the word Unscrambled:" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Which of these words is NOT part of the text context:" />

        <RadioGroup
            android:layout_gravity="center"
            android:layout_width="328dp"
            android:layout_height="183dp">

            <RadioButton
                android:id="@+id/radioButton15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soccer Ball" />

            <RadioButton
                android:id="@+id/radioButton16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Character" />

            <RadioButton
                android:id="@+id/radioButton17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wizard" />

            <RadioButton
                android:id="@+id/radioButton18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traps" />
        </RadioGroup>

        <Switch
            android:id="@+id/switch6"
            android:layout_width="328dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Do you need to mix  all the abilities named below?" />

        <Button
            android:id="@+id/button38"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:text="CHECK"
            android:layout_gravity="center"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>