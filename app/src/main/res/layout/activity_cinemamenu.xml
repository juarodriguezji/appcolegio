<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81DA81"
    tools:context=".cinemamenu">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/headercinemax" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            app:srcCompat="@drawable/output_onlinepngtools__9_" />

        <Button
            android:id="@+id/button17"
            android:layout_width="match_parent"
            android:layout_height="90dp"

            android:text="SPORTS"
            android:layout_gravity="center"
            android:background="#8BC34A"
            android:textStyle="bold"
            app:backgroundTint="#8BC34A"
            />

        <Button
            android:id="@+id/button18"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="RPG"
            android:layout_gravity="center"
            android:background="#4CAF50"
            android:textStyle="bold"
            app:backgroundTint="#4CAF50"
            />

        <Button
            android:id="@+id/button19"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="STRATEGY"
            android:layout_gravity="center"
            android:background="#1CE10E"
            android:textStyle="bold"
            app:backgroundTint="#1CE10E"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>