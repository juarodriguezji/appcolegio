<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tenisact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView107"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/depi" />

        <TextView
            android:id="@+id/textView61"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Select the tool you use to play this sport:" />

        <LinearLayout
            android:layout_width="287dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button69"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tenc" />

            <Button
                android:id="@+id/button70"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tena" />

            <Button
                android:id="@+id/button71"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/tenb" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView62"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="How many calories does a man burn in a match?" />

        <RadioGroup
            android:layout_width="354dp"
            android:layout_height="132dp"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/radioButton79"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500" />

            <RadioButton
                android:id="@+id/radioButton80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="420" />

            <RadioButton
                android:id="@+id/radioButton81"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="600" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="337dp"
            android:layout_height="139dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView63"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Was Helene Prevost the couple of Charlotte Cooper on 10 July ?" />

            <RadioButton
                android:id="@+id/radioButton82"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radioButton83"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <Button
            android:id="@+id/button72"
            android:layout_width="287dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:backgroundTint="#9C27B0"
            android:text="CHECK" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>